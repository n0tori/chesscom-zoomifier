{
    "manifest_version": 3,
    "name": "ChessZoomerSpeak",
    "version": "1.0",
    "description": "Transforms Chess.com game review bot dialogue into zoomer language.",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.chess.com/*"],
        "js": ["zoomerspeak.js"]
      }
    ]
  }